    <DataTemplate x:Key="StandardStatusTemplate" DataType="{x:Type MiniTwitter_Net_Twitter:Status}">
        <Grid Margin="7,7,7,7" SnapsToDevicePixels="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Width="48" Height="48" Margin="0,0,8,0" Grid.Column="0" VerticalAlignment="Top"
                   Source="{Binding Path=Sender.Icon}" ContextMenu="{StaticResource UserMenu}"
                   Visibility="{Binding Source={x:Static MiniTwitter_Properties:Settings.Default}, Path=IsIconVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Image.ToolTip>
                    <StackPanel MaxWidth="400">
                        <TextBlock FontWeight="Bold">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} / {1}">
                                    <Binding Path="Sender.Name" />
                                    <Binding Path="Sender.Location" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Text="{Binding Path=Sender.Description}" TextWrapping="Wrap" />
                        <TextBlock TextWrapping="Wrap">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}Tweets：{0} / 收藏：{3} / 好友：{1} / 跟随者：{2}">
                                    <Binding Path="Sender.StatusesCount"/>
                                    <Binding Path="Sender.Friends"/>
                                    <Binding Path="Sender.Followers"/>
                                    <Binding Path="Sender.FavouritesCount"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Image.ToolTip>
            </Image>
            <StackPanel Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <MiniTwitter_Controls:HyperlinkButton Text="{Binding Path=Sender.ScreenName}" ToolTip="{Binding Path=Sender.Name}"
                                                          FontWeight="Bold" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center"
                                                          Command="MiniTwitter_Input:Commands.MoveToUserPage" CommandParameter="{Binding}"
                                                          ContextMenu="{StaticResource UserMenu}"/>
                    <Image Width="12" Height="12" Margin="3,0,0,0" Visibility="{Binding Path=Sender.Protected, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Style="{DynamicResource ProtectImageStyle}" ToolTip="该用户已设置保护"/>
                    <Image Width="12" Height="12" Margin="3,0,0,0" Visibility="{Binding Path=IsNewest, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Style="{DynamicResource NewImageStyle}"/>
                </StackPanel>
                <MiniTwitter_Controls:TextViewer Text="{Binding Path=Text}" Style="{StaticResource TimelineTextStyle}"/>
                <WrapPanel>
                    <MiniTwitter_Controls:HyperlinkButton Text="{Binding Path=RelativeTime}" FontSize="11" Margin="0,0,3,0" VerticalAlignment="Center"
                                                          Command="MiniTwitter_Input:Commands.MoveToStatusPage" CommandParameter="{Binding}">
                        <MiniTwitter_Controls:HyperlinkButton.ToolTip>
                            <TextBlock Text="{Binding Path=CreatedAt, StringFormat=yyyy/MM/dd HH:mm:ss}"/>
                        </MiniTwitter_Controls:HyperlinkButton.ToolTip>
                    </MiniTwitter_Controls:HyperlinkButton>
                    <TextBlock Margin="0,0,3,0" FontSize="11" VerticalAlignment="Center" Text="via"/>
                    <TextBlock Margin="0,0,3,0" FontSize="11" VerticalAlignment="Center" 
                               ToolTip="{Binding Path=SourceUri}" ContextMenu="{StaticResource SourceMenu}">
                        <Hyperlink Command="MiniTwitter_Input:Commands.MoveToSourcePage" CommandParameter="{Binding}" >
                            <Run Text="{Binding Path=Source}" />
                        </Hyperlink>
                    </TextBlock>
                    <Button Margin="0,0,3,0" Padding="0" Visibility="{Binding Path=IsAuthor, Converter={StaticResource BooleanToVisibilityConverter}}"  ToolTip="删除"
                            Command="MiniTwitter_Input:Commands.Delete" CommandParameter="{Binding}" Style="{DynamicResource ImageButtonStyle}">
                        <Image Width="14" Height="14" Style="{DynamicResource CrossImageStyle}"/>
                    </Button>
                    <Button Margin="0,0,3,0" Padding="0" Command="MiniTwitter_Input:Commands.Favorite" ToolTip="收藏"
                            CommandParameter="{Binding}" Style="{DynamicResource ImageButtonStyle}">
                        <Image Width="14" Height="14" Style="{DynamicResource FavoriteImageStyle}"/>
                    </Button>
                    <Button Margin="0,0,3,0" Padding="0" Command="MiniTwitter_Input:Commands.Reply" ToolTip="回复"
                            CommandParameter="{Binding}" Style="{DynamicResource ImageButtonStyle}"
                            ContextMenu="{StaticResource ReplyButtonMenu}" >
                        <Image Width="14" Height="14" Style="{DynamicResource ArrowReplyImageStyle}"/>
                    </Button>
                    <Button Margin="0,0,3,0" Padding="0" Command="MiniTwitter_Input:Commands.ReTweet" ToolTip="带评论 ReTweet"
                            CommandParameter="{Binding}" Style="{DynamicResource ImageButtonStyle}"
                            ContextMenu="{StaticResource RetweetButtonMenu}">
                        <Image Width="14" Height="14" Style="{DynamicResource ArrowReTweetImageStyle}"/>
                    </Button>
                    <Button Margin="0,0,3,0" Padding="0" Command="MiniTwitter_Input:Commands.InReplyTo" ToolTip="移动到所回复的条目"
                            CommandParameter="{Binding}" Style="{DynamicResource ImageButtonStyle}"
                            Visibility="{Binding Path=IsReply, Converter={StaticResource BooleanToVisibilityConverter}}"
                            ContextMenu="{StaticResource MoveToReplyStatusButtonMenu}">
                        <Image Width="14" Height="14" Style="{DynamicResource ArrowLeftImageStyle}"/>
                    </Button>
                    <Button Margin="0,0,3,0" Padding="0" Command="MiniTwitter_Input:Commands.BeReplied" ToolTip="查看回复"
                            CommandParameter="{Binding}" Style="{DynamicResource ImageButtonStyle}"
                            Visibility="{Binding Path=IsReplied, Converter={StaticResource BooleanToVisibilityConverter}}"
                            ContextMenu="{StaticResource MoveToMentionedStatusButtonMenu}">
                        <Image Width="14" Height="14" Style="{DynamicResource ArrowRightImageStyle}"/>
                    </Button>
                </WrapPanel>
            </StackPanel>
        </Grid>
    </DataTemplate>

